--echo
--echo ## I. Execute the test using valid compression: zstd + combine mixed=false
--echo #
exec $MYSQLXTEST
  -ux_root --password=''
  --compression-mode=preferred
  --compression-algorithm=zstd_stream
  --compression-combine-mixed-messages=0
