--echo
--echo ## A. Execute the test using zlib/single
--echo #

exec $MYSQLXTEST
  -ux_root --password=''
  --schema=xtest
  --compression-mode=required --compression-algorithm=deflate_stream
  --compression-combine-mixed-messages=0
  --compression-max-combine-messages=1
