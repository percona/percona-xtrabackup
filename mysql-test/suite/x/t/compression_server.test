-->echo
-->echo #
-->echo # II.1
CALL two_resultsets();

-->echo
-->echo #
-->echo # II.2
CALL three_results_sets();


-->echo
-->echo #
-->echo # III
callmacro Assert_client_message_count	Mysqlx.Connection.Compression	==	%COMP_COUNT%;

EOF

let $STORED_PROC_DB_NAME=xtest;
source ../include/stored_procedures.inc;
source ../include/sample_tables.inc;
